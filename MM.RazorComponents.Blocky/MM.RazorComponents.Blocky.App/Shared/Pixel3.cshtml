<p class="@ClassName" style="@PositionVarsStyle color:hsla(@(Color.C1.ToString("F2")),@(Color.C2.ToString("F2"))%,@(Color.C3.ToString("F2"))%,@Color.A);" />
@functions
{
  [Parameter] protected Colors Color { get; set; }
  [Parameter] protected Position Position { get; set; }
  [Parameter] protected int Size { get; set; }
  [Parameter] protected string ClassName { get; set; } = "pixel2";

  Random random = new Random();
  string PositionVarsStyle => $"position:absolute;transform:translate({Position.X}px,{Position.Y}px);width:{Size}px;height:{Size}px;";

}  