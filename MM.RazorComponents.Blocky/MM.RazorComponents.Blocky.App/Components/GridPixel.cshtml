@if (Clickable)
{
    <p onmousedown=@Select class="@ClassName @SubClassName"
       style="@ColorStyle" />
}
else
{
    <p class="@ClassName @SubClassName"
       style="@ColorStyle" />
}
@functions
{
    [Parameter] protected Colors Color { get; set; }
    [Parameter] protected Func<Colors, Task> Selected { get; set; }
    [Parameter] protected bool Clickable { get; set; }
    [Parameter] protected string ClassName { get; set; } = "pixel";
    [Parameter] protected string SubClassName { get; set; } = "px-grid";

    string ColorStyle => $"--pc:hsla({Color.C1.ToString("F2")},{Color.C2.ToString("F2")}%,{Color.C3.ToString("F2")}%,{Color.A.ToString("F2")});";

    async Task Select(UIMouseEventArgs args)
    {
        await Selected?.Invoke(Color);
    }
}