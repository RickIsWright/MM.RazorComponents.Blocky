<p class="@ClassName" style="@PositionVarsStyle color:hsla(@(Color.C1.ToString("F2")),@(Color.C2.ToString("F2"))%,@(Color.C3.ToString("F2"))%,@Color.A);" />
@functions
{
    [Parameter] protected Colors Color { get; set; }
    [Parameter] protected Position Position { get; set; }
    [Parameter] protected int Size { get; set; }
    [Parameter] protected string ClassName { get; set; } = "pixel4";

    Random random = new Random();
    string PositionVarsStyle => $"position:absolute;--pos-top:{Position.Y}px;--pos-left:{Position.X}px;--pos-speed:{random.Next(2000, 3000)}ms;transform:translate({random.Next(0, 500)}px,{random.Next(0, 500)}px);width:{Size}px;height:{Size}px;";

}  